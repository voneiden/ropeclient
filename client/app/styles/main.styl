html
  height: 100%

body
  font-family: 'Helvetica Neue', 'Arial', sans-serif
  margin: 0 auto
  height: 100%
  background-color: grey

.root-container
  height: 100%

.flex-container
  display: flex
  background-color: red
  height: 100%

.flex-row
  flex-direction: row

.flex-column
  flex-direction: column

for num in 0 1 2 3 4 5 6
  .flex-grow-{num}
    flex-grow: num

  .flex-shrink-{num}
    flex-shrink: num

  .flex-basis-{num}
    flex-basis: num

.flex-content

  border: 1px solid grey
  background-color: black
  color: white
  padding: 0.5em
  overflow: hidden

.flex-left
  flex: 1 0

.flex-right
  flex: 2 5

.flex-offtopic
  flex: 2 0

.flex-ontopic
  flex: 3 0

.flex-input
  flex: 0 0 2em


#offtopic, #ontopic
  overflow-y: scroll
  white-space: pre-wrap
  font-family: "Lucida Console", Monaco, monospace

::-webkit-scrollbar
  width:8px
  background-color:#222222

::-webkit-scrollbar-thumb
  background-color:whitesmoke
  border-radius:3px

::-webkit-scrollbar-thumb:hover
  background-color:cyan
  bborder:1px solid #333333

::-webkit-scrollbar-thumb:active
  background-color:darkcyan
  border:1px solid #333333

::-webkit-scrollbar-track
  border:1px gray solid
  border-radius:10px
  -webkit-box-shadow:0 0 6px black inset


#input
  padding: 0.1em

textarea
  width: 100%
  box-sizing: border-box
  resize: none
  vertical-align: top // Chrome hack
  background-color: black
  color: white


.dice
  border: 1px solid lime

.dice-details
  display: none

.connection-container
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: black
  display: flex
  justify-content: center
  align-items: center

.center-box
  text-align: center
  border: 1px solid grey
  border-radius: 5px
  padding: 10px
  background-color: #111111
  color: whitesmoke

input, button
  background-color: black
  color: whitesmoke
  border-radius: 5px

.tab-header
  text-align: center
  background-color: black
  border-bottom: 1px solid grey

.tab-header:not(:last-of-type)
  border-right: 1px solid grey 

#password
  display: none;